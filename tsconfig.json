{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "composite": true,
    "target": "es2017",
    "rootDir": "src",
    "outDir": "dist",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true
  },
}
